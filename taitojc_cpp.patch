+uint16_t taitojc_state::dangcurv_dsp_internal_rom_r(offs_t offset)
+{
+	// Stub implementation of TMS320C51 internal ROM for Dangerous Curves
+	// This allows the game to boot without the actual internal ROM dump
+	
+	// Handle interrupt vectors (0x0000-0x001F)
+	if (offset < 0x20)
+	{
+		if (offset == 0x0000) return 0xF495; // RESET vector - branch to user code
+		if (offset == 0x0001) return 0x2000; // RESET address
+		return 0xCE00; // RET for other interrupts
+	}
+	
+	// Fix for dead loop at 0x205b-0x205c
+	if (offset >= 0x205b && offset <= 0x205c)
+		return 0x7F00; // NOP instruction
+	
+	// Default: return RET to safely exit internal ROM calls
+	return 0xCE00; // RET instruction
+}
